[MASTER]
# Specify a score threshold to be exceeded before program exits with error.
fail-under=7.0

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0114,  # missing-module-docstring (we have module docstrings now)
    C0115,  # missing-class-docstring (we have class docstrings now)
    C0116,  # missing-function-docstring (we have function docstrings now)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access (needed for PyInstaller _MEIPASS)
    
[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

[DESIGN]
# Minimum number of public methods for a class
min-public-methods=1

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,x,y,w,h,dx,dy,_,doc,app

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=10
